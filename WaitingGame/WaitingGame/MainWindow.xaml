<Window x:Class="WaitingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaitingGame"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Waiting Game" Height="300" Width="450">
    
    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Button Click="myButton_click" x:Name="myButton" Content="Click me to begin" MouseEnter="myButton_MouseEnter" MouseLeave="myButton_MouseLeave" Style="{StaticResource CustomButtonStyle}"/>
    </Grid>
</Window>
